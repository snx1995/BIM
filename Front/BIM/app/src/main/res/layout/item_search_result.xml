<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_result_linear_layout"
    android:layout_marginTop="1dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:src="@drawable/send_tmp"
        android:id="@+id/item_search_result_image"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:id="@+id/item_search_result_name"
            android:layout_weight="1"
            android:text="@string/text_tmp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/text_tmp"
                android:id="@+id/item_search_result_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:id="@+id/item_search_result_birthday"
                android:text="@string/text_tmp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>